{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "perf", "test", "build", "ci", "chore", "revert"]
    ],
    "scope-enum": [
      2,
      "always",
      ["skill", "commands", "environments", "troubleshooting", "workflows", "deps", "release", "config", "ci"]
    ],
    "scope-empty": [1, "never"],
    "header-max-length": [2, "always", 100]
  }
}
